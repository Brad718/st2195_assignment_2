# Install and load required packages
if (!requireNamespace("rvest", quietly = TRUE)) {
  install.packages("rvest")
}

if (!requireNamespace("pander", quietly = TRUE)) {
  install.packages("pander")
}

library(rvest)
library(pander)

# URL of the Wikipedia page
url <- "https://en.wikipedia.org/wiki/Comma-separated_values"

# Read the HTML content of the page
page <- read_html(url)

# Extract the text containing car manufacturer CSV example
car_data_text <- html_text(html_node(page, xpath = '//*[contains(text(), "Year,Make,Model,Description,Price")]'))

# Save the text as a .csv file
writeLines(car_data_text, "car_data.csv")

# Read the CSV data using read.csv
car_data <- read.csv("car_data.csv")

# Render the table using pander
pander(car_data)
